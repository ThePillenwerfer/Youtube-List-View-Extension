{
  "manifest_version": 3,
  "name": "YouTube Subscriptions List View",
  "version": "0.1",
  "description": "Forces YouTube into a list view with customizable settings.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}